<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="0"
        android:id="@+id/lowTextView"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_toLeftOf="@+id/volumeSeekBar"
        android:layout_toStartOf="@+id/volumeSeekBar" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:progressDrawable="@drawable/progress"
        android:scrollbarSize="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:minWidth="172dp"
        android:maxWidth="172dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:max="100"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="100"
        android:textColor="@color/colorAccent"
        android:id="@+id/highTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_toRightOf="@+id/volumeSeekBar"
        android:layout_toEndOf="@+id/volumeSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navigationBarColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alarm volume"
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/volumeSeekBar"
        android:layout_toRightOf="@+id/lowTextView"
        android:layout_toEndOf="@+id/lowTextView" />

    <Button
        android:id="@+id/ok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/volumeSeekBar"
        android:layout_toLeftOf="@+id/highTextView"
        android:layout_toStartOf="@+id/highTextView" />


</RelativeLayout>