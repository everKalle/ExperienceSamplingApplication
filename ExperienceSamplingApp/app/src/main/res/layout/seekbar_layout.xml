<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="0"
        android:id="@+id/lowTextView"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:layout_marginTop="78dp"
        android:layout_alignBaseline="@+id/volumeSeekBar"
        android:layout_alignParentLeft="true" />
    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:progressDrawable="@drawable/progress"
        android:scrollbarSize="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:minWidth="172dp"
        android:maxWidth="172dp"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:max="100"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lowTextView" />
    <TextView
        android:text="100"
        android:textColor="@color/colorAccent"
        android:id="@+id/highTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingRight="20dp"
        android:ems="10"
        android:layout_toRightOf="@+id/volumeSeekBar"
        android:layout_alignTop="@+id/lowTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navigationBarColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alarm volume"
        android:id="@+id/textView"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/highTextView"
        android:layout_alignBaseline="@+id/highTextView"
        />

    <Button
        android:id="@+id/cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/lowTextView"
        android:layout_toRightOf="@+id/lowTextView"
        android:layout_toEndOf="@+id/lowTextView" />

    <Button
        android:id="@+id/ok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/highTextView"
        android:layout_toLeftOf="@+id/highTextView"
        android:layout_toStartOf="@+id/highTextView" />

</RelativeLayout>