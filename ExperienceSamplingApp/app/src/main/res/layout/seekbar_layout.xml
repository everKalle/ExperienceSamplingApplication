<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="0"
        android:id="@+id/lowTextView"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="37dp"
        android:textStyle="bold"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:progressDrawable="@drawable/progress"
        android:scrollbarSize="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:max="100"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lowTextView"
        android:layout_toEndOf="@+id/lowTextView" />
    <TextView
        android:text="100"
        android:textColor="@color/colorAccent"
        android:id="@+id/highTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/volumeSeekBar"
        android:layout_toEndOf="@+id/volumeSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navigationBarColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alarm volume"
        android:id="@+id/textView"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>